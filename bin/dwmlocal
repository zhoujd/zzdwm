#!/bin/bash

log=$HOME/.dwm-errors
app=$(basename $0)

echo "$(date): starting $app." >>$log

opt=(
    "VBoxClient-all"
)

run_cmd() {
    local cmd=$1
    if [ -n "$(which $cmd)" ]; then
        $cmd >/dev/null 2>&1 || true
        echo "$(date): run $cmd success." >>$log
    fi
}

main() {
    for i in "${opt[@]}"; do
        run_cmd $i &
    done
}

main
