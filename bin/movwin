#!/bin/sh
# Move a window to the side of a screen.

left_gap=9
top_gap=9
right_gap=9
bottom_gap=9
case "$1" in
    "left") xdotool getactivewindow windowmove $left_gap y ;;
    "top")  xdotool getactivewindow windowmove x $top_gap ;;
    "right")
	screen_width=$(xwininfo -root | grep Width | cut -d: -f2 | tr -d ' ')
	win_width=$(xdotool getactivewindow getwindowgeometry --shell | grep WIDTH | cut -d= -f2)
	xdotool getactivewindow windowmove $(( $screen_width - $win_width - $right_gap )) y
	;;
    "bottom")
	screen_height=$(xwininfo -root | grep Height | cut -d: -f2 | tr -d ' ')
	win_height=$(xdotool getactivewindow getwindowgeometry --shell | grep HEIGHT | cut -d= -f2)
	xdotool getactivewindow windowmove x $(( $screen_height - $win_height - $bottom_gap ))
	;;
    *)
	echo "Usage: $(basename $0) {left|top|right|bottom}"
        ;;
esac
