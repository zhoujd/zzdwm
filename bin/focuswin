#!/bin/bash

[[ $# -lt 1 ]] && cat <<EOF && exit
Usage: $(basename $0) {app} [cmd]
EOF

app=${1}
cmd=${2:-$app}
num=$(wmctrl -xl 2>/dev/null | tr -s '[:blank:]' | cut -d ' ' -f 3 | \
          grep -i "^$app" | wc -l)

app_run() {
    hash $cmd 2>/dev/null
    if [[ $? -eq 0 ]]; then
        exec $cmd
    else
        echo "No $cmd can been found!"
    fi
}

app_focus() {
    # get id of the focused window
    active_win_id=$(xprop -root | grep '^_NET_ACTIVE_W' | awk -F'# 0x' '{print $2}')
    if [ "$active_win_id" == "0" ]; then
        active_win_id=""
    fi
    # get list of all windows matching with the class above
    win_list=$(wmctrl -x -l | grep -i $app | awk '{print $1}')
    # get next window to focus on, removing id active
    switch_to=$(echo $win_list | sed s/.*$active_win_id// | awk '{print $1}')
    # if the current window is the last in the list ... take the first one
    if [ "$switch_to" == '' ]; then
        switch_to=$(echo $win_list | awk '{print $1}')
    fi
    # switch to window
    if [ "$switch_to" != '' ]; then
        xdotool windowactivate $switch_to
        xdotool windowraise $switch_to
        xdotool windowfocus $switch_to
    fi
}

case $num in
    0 )
        app_run
        ;;
    * )
        app_focus
        ;;
esac
