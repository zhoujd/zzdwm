#!/bin/bash

log=$HOME/.cwm-errors
kind=run

opt=(
    "VBoxClient-all &"
    "blackwalls &"
    "shotkey &"
    "xbanish &"
    "xcompmgr &"
)

spawn() {
    for i in "${opt[@]}"; do
        app=$(echo $i | awk '{print $1}')
        if [ -n "$(which $app)" ]; then
            echo "$(date) cwm: spawn $app."
            eval $i >/dev/null 2>&1
        fi
    done
}

run() {
    echo "$(date) cwm: start cwm on run mode." >$log
    echo "$(date) cwm: start applications." >>$log
    spawn >>$log 2>&1
    exec cwm >/dev/null 2>&1
}

debug() {
    echo "$(date) cwm: start cwm on debug mode." >$log
    echo "$(date) cwm: start applications." >>$log
    spawn >>$log 2>&1
    exec cwm >>$log 2>&1
}

case $kind in
    run|-r )
        run
        ;;
    debug|-d )
        debug
        ;;
esac
