#!/bin/bash

log=$HOME/.cwm-errors
kind=run

opt=(
    "VBoxClient-all &"
    "blackwalls &"
    "shotkey &"
    "xbanish &"
    "xcompmgr &"
)

spawn() {
    for i in "${opt[@]}"; do
        app=$(echo "$i" | awk '{print $1}')
        if [ -n "$(which $app)" ]; then
            echo "$(date) cwm: spawn $app."
            eval "$i" >/dev/null 2>&1
        fi
    done
}

run() {
    echo "$(date) cwm: start cwm on run mode."
    echo "$(date) cwm: start applications."
    spawn
    exec cwm >/dev/null 2>&1
}

debug() {
    echo "$(date) cwm: start cwm on debug mode."
    echo "$(date) cwm: start applications."
    spawn
    exec cwm
}

case $kind in
    run|-r )
        run >$log 2>&1
        ;;
    debug|-d )
        debug >$log 2>&1
        ;;
esac
