#!/bin/bash

log=$HOME/.cwm-errors
kind=run

opt=(
    "VBoxClient-all &"
    "blackwalls &"
    "shotkey &"
    "xbanish &"
    "xcompmgr &"
)

log() {
    echo "[$(date)]$@"
}

spawn() {
    for i in "${opt[@]}"; do
        app=$(echo "$i" | awk '{print $1}')
        if [ -n "$(which $app)" ]; then
            log "[spawn] run $app."
            eval "$i" >/dev/null 2>&1
        fi
    done
}

run() {
    log "[cwm] start cwm on run mode."
    log "[cwm] start applications."
    spawn
    exec cwm >/dev/null 2>&1
}

debug() {
    log "[cwm] start cwm on debug mode."
    log "[cwm] start applications."
    spawn
    exec cwm
}

case $kind in
    run|-r )
        run >$log 2>&1
        ;;
    debug|-d )
        debug >$log 2>&1
        ;;
esac
