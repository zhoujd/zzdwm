#!/bin/sh

log=$HOME/.dwm-errors
echo "$(date): starting dwm desktop." >$log

kind=run

run() {
    echo "$(date): dwm on run mode." >>$log
    exec dwm >/dev/null 2>&1
}

debug() {
    echo "$(date): dwm on debug mode." >>$log
    exec dwm >>$log 2>&1
}

case $kind in
    run|-r )
        run
        ;;
    debug|-d )
        debug
        ;;
esac
