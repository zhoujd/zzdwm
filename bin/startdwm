#!/bin/bash

log=$HOME/.dwm-errors
kind=run

opt=(
    "VBoxClient-all"
)

start() {
    local cmd=$1
    if [ -n "$(which $cmd)" ]; then
        $cmd >/dev/null 2>&1 || true
        echo "$(date) $app: run $cmd success." >>$log
    fi
}

init() {
    rm -rf $log
    for i in "${opt[@]}"; do
        start $i &
    done
}

run() {
    echo "$(date) dwm: start dwm on run mode." >>$log
    exec dwm >/dev/null 2>&1
}

debug() {
    echo "$(date) dwm: start dwm on debug mode." >>$log
    exec dwm >>$log 2>&1
}

case $kind in
    run|-r )
        init
        run
        ;;
    debug|-d )
        init
        debug
        ;;
esac
