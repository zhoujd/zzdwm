#!/bin/bash

log=$HOME/.dwm-errors
kind=run

opt=(
    "VBoxClient-all &"
)

log() {
    echo "[$(date)]$@"
}

spawn() {
    for i in "${opt[@]}"; do
        app=$(echo "$i" | awk '{print $1}')
        if [ -n "$(which $app)" ]; then
            log "[spawn] run $app."
            eval "$i" >/dev/null 2>&1
        fi
    done
}

run() {
    log "[dwm] start dwm on run mode."
    log "[dwm] start applications."
    spawn
    exec dwm >/dev/null 2>&1
}

debug() {
    log "[dwm] start dwm on debug mode."
    log "[dwm] start applications."
    spawn
    exec dwm
}

case $kind in
    run|-r )
        run >$log 2>&1
        ;;
    debug|-d )
        debug >$log 2>&1
        ;;
esac
