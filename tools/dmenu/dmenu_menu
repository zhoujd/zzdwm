#!/bin/bash

menupath="/usr/local/bin"
prompt="menu:"
ignores=(
    dmenu_menu
    dmenu_path
)

menus=$(find $menupath/dmenu_* -maxdepth 1 -type f -executable \
            | sed 's|^'$menupath/'||' \
            | sort)

for ig in ${ignores[@]}; do
    menus=$(echo "$menus" | grep -v $ig)
done

target=$(echo "$menus" | dmenu -p $prompt -l 10)
if [ -n "$target" ]; then
    exec $menupath/$target
fi
